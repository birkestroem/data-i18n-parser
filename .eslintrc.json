{
  "extends": [ "airbnb-base", "plugin:jest/recommended" ],
  "plugins": ["jest"],
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true,
    "node": true
  },
  "rules": {
    "no-await-in-loop": "off",
    "no-case-declarations": "off",
    "no-console": "off",
    "no-continue": "off",
    "no-multi-assign": "off",
    "no-multi-str": "off",
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    "max-len": [
      "error", {
        "code": 120
       }
    ]
  }
}
